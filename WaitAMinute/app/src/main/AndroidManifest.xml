<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nikhilchodimella.waitaminute">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NoteView"
            android:label="Notes"
            android:parentActivityName=".Home"/>
        <activity android:name=".ToDoMain"
            android:label="To Do List"
            android:parentActivityName=".Home"/>
        <activity android:name=".NoteEditor"
            android:parentActivityName=".NoteView"/>

        <provider
            android:name=".NotesProvider"
            android:authorities="com.example.nikhilchodimella.waitaminute.notesprovider"
            android:exported="false" />
    </application>

</manifest>